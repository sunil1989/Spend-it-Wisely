<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rli"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hourly_rate"
        android:textSize="@dimen/font_size_large"
        android:textColor="@color/white"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/in_order"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_marginTop="30dp" />

    <LinearLayout
        android:layout_below="@+id/textView2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">


        <LinearLayout

            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:background="@null"
                android:id="@+id/spinner1"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="0.3"
                android:dividerHeight="@null"
                android:divider="#ffffff"
                android:dropDownVerticalOffset="50dp"
                android:fitsSystemWindows="true"
                style="@style/SampleTheme"

                />

            <EditText
                android:paddingLeft="5dp"
                android:inputType="number"
                android:layout_marginTop="2dp"
                android:id="@+id/editText1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_gravity="center"
                android:textColorHint="@color/white"
                android:hint="Your Monthly Income"
                android:textSize="18sp"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColor="@color/white"
                android:layout_height="wrap_content"></EditText>

            <TextView
                android:visibility="gone"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:background="@null"
                android:layout_height="wrap_content"
                android:text="/month"
                android:textSize="@dimen/font_size_medium1"
                android:textColor="@color/white"
                android:id="@+id/textView7"
                android:layout_gravity="center" />

        </LinearLayout>

        <View
            android:background="@color/white"
            android:layout_width="match_parent"

            android:layout_height="1dp">

        </View>

        <LinearLayout
            android:layout_marginTop="35dp"
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:inputType="number"
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:background="@null"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColorHint="@color/white"
                android:hint="Nr. of working hours/week"
                android:textSize="@dimen/font_size_medium1"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_weight="1"></EditText>

            <TextView
                android:visibility="gone"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:background="@null"
                android:layout_height="wrap_content"
                android:text="| hours/week"
                android:textSize="@dimen/font_size_medium1"
                android:textColor="@color/white"
                android:id="@+id/textView8"
                android:layout_gravity="center" />

        </LinearLayout>

        <View
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:layout_height="1dp">

        </View>


        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="your hourly rate is"
            android:textColor="#94e8d5"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/textView3" />


        <TextView
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:background="@null"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColorHint="#99f1c2"
            android:hint="$ -- /h"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_weight="1"></TextView>

        <View
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_height="1dp">

        </View>
    </LinearLayout>

    <Button
        android:visibility="gone"
        android:background="#FFC4075D"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="CONTINUE"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_medium"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView

        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$ spend it wisely"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:id="@+id/textView10"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
